<title>Insert title here</title>
</head>
<body>
	<script type="text/javascript">
		//배열에서 사용할 수 있는 메소드
		//4. 배열을 사용하는 방법 - 배열의 선언과 생성과 초기화를 한 번에 작업
		//let myarr1 = [];//배열의 사이즈를 지정하지 않고 초기화 let myarr1 = my Array();
		let myarr1 = [99,98,100,100,99];
		let myarr2 = ["servlet","javascript","jQuery","spring"];
		
		showArray(myarr1);
		showArray(myarr2);
		//join메소드는 매개변수로 전달된 문자열과 배열의 요소가 연결되어 하나의 문자열로 리턴
		let data1 = myarr2.join(",");
		document.write(typeof data1 + "<br/>");
		//문자열을 구분기호로 잘라서 배열로 변경 - split은 string이 갖고 있는 메소드
		let data2 = data1.split(",");
		showArray(data2);
		//배열의 요소를 거꾸로
		let data3 = myarr2.reverse();
		showArray(data3);
		
		//배열의 정렬
	/* 	let data4 = myarr1.sort();
		showArray(data4); */
		//배열의 요소 넣기
		myarr2.push("mongodb");
		showArray(myarr2);
	</script>

</body>
</html>
