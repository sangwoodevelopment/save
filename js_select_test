	<script type="text/javascript">
		function selectTest(){
			//selectItem는 myselect라는 id로 정의된 객체를 저장하는 변수
			let selectItem = document.querySelector("#myselect");
			let index = selectItem.selectedIndex;
			alert(index);
			alert(selectItem.value);
			alert(selectItem.option[index].text);
			alert(selectItem.option[index].value);
		}
		
	</script>
