<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<script type="text/javascript">
		//Date객체를 생성하고 사용
		//자바스크립트 엔진에 포함되어 있는 Date객체를 사용하기 위해서 메모리에 할당
		let today = new Date();
		let dday = new Date("2024-03-20");
		document.write(today+"<br/>");
		document.write(dday+"<br/>");
		
		let dateStr = today.getFullYear()+"년";
		//1월-0, 2월-1 ...
		dateStr = dateStr + (today.getMonth()+1)+ "월";
		dateStr = dateStr + today.getDate()+ "일";
		dateStr = dateStr + today.getHours()+ "시";
		dateStr = dateStr + today.getMinutes()+ "분";
		dateStr = dateStr + today.getSeconds()+ "초";
		document.write(dateStr+"<br/>");
		//요일번호 0-일요일, ... 6-토요일
		let day = today.getDay();
		document.write("요일번호:"+day+"<br/>");
		let. newday = new Date();
		newday.setMonth(7);//8월
		newday.setDate(1);//1일셋팅
		document.write(newday+"<br/>");
		document.write.bgColor = "yellow";
		
	</script>

</body>
</html>
